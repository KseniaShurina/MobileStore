@model MobileStore.Presentation.ViewModels.ProductsViewModel
@{
    ViewData["Title"] = "Магазин смартфонов";
}
<!DOCTYPE html>
<html>

<head>
    <style>

        .navigation {
            margin-block: auto;
            background-color: #333;
        }

        .navigation li {
            display: inline-block;
            padding-block: 1px;
        }

        .navigation a {
            display: block;
            color: #f2f2f2;
            padding: 8px 16px;
            font-size: 17px;
            text-decoration: none;
        }
        /* Change the color of links on hover */
        .navigation a:hover {
            background-color: #ddd;
            color: #111;
        }
    </style>
    <title>My Store</title>
    <div class="navigation">
        <nav>
            @* Тег <nav> определяет набор навигационных ссылок *@
            <div>
                <ul>
                    @foreach (var productType in Model.ProductTypes)
                    {
                        <li>
                            <a href="@Url.Action("Index", "Home")?productTypeId=@productType.Id">@productType.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </div>
</head>



<body>

<style type="text/css">

    .main-content {
        display: flex
    }

    .phone {
        width: 150px; /* Ширина */
        margin: 0 10px 10px 0; /* Отступы */
        padding: 10px 0; /* Поля сверху и снизу */
        text-align: center; /* Выравнивание по центру */
    }

    .phone h3 {
        height: 70px;
    }

    .phone-actions {
        display: block;
    }

    img {
        width: 100%;
    }
</style>

<section class="main-content sidebar-left-false ">
    @foreach (var product in Model.Products)
    {
        <div class="phone">
            <p><img src="@product.Img" alt=""></p>
            <h3>@product.Name</h3>
            <div class="phone-actions">
                <div>@product.Price</div>
            </div>
            <div class="cart">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Cart"
                          asp-action="Create"
                          asp-route-productId="@product.Id"
                          asp-route-quantity="1">
                        <button>В корзину</button>
                    </form>
                }
            </div>
        </div>
    }
</section>
</body>
</html>