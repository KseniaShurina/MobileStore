@using MobileStore.Infrastructure.Entities
@model MobileStore.Presentation.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/orderIndex.css" />
</head>
<body>
    <div class="container">
        <h2>Вы покупаете:</h2>
        <div class="a1 col-lg-12">
            <table class="table-of-cart-items">
                <thead>
                <tr>
                    <td>Name</td>
                    <td>Quantity</td>
                    <td>Price</td>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product.Price * item.Quantity) <span>$</span></td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <td>Итого:</td>
                    <td>@Model.CartItems.Sum(p => p.Product.Price * p.Quantity) <span>$</span></td>
                </tr>
                </tfoot>
            </table>
        </div>
        <h2>Contact details:</h2>
        <div class="a1 col-lg-12">
            @*<label for="username"></label>*@
            <input type="text" id="firstname" placeholder="First Name" />
            <input type="text" id="surname" placeholder="Surname" />
            <input type="text" id="phoneNumber" placeholder="phoneNumber" />
            <input type="text" id="email" placeholder="Email" />
            <input type="date" placeholder="Birthday" />
        </div>
        <div>
            <form asp-controller="Cart"
                  asp-action="Index">
                <button>Отменить заказ</button>
            </form>
        </div>
    </div>
</body>
</html>