@model MobileStore.Presentation.ViewModels.LoginViewModel
<!DOCTYPE html>

<head>
    <title>Enter</title>
    <link rel="stylesheet" href="~/css/accountStyles.css" />
</head>

<body>
    <div>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div class="form">
                <h2 align="center">Login</h2>

                <div class="description">
                    <p>У Вас нет аккаунта? <a href="~/Account/Register">Перейти на форму регистрации</a></p>
                </div>

                <div>
                    <label asp-for="Email">Email</label><br/>
                    <input type="text" asp-for="Email" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div>
                    <label asp-for="Password">Password</label><br />
                    <input asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password"/>
                </div>

                <div>
                    <input asp-for="ReturnUrl" hidden="true"/>
                </div>

                <div>
                    <input type="submit" value="Login" class="btn btn-dark"/>
                </div>
            </div>
        </form>
    </div>
</body>