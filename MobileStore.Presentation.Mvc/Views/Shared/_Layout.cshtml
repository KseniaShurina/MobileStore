@using MobileStore.Common.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileStore</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        container {
            margin-bottom: 1px;
        }

        .menu-container {
            display: flex;
        }

        .content-container {
            max-width: 100%;
        }

        ul {
            padding: 0;
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow@* mb-3*@">
            <div class="menu-container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MobileStore</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                @if (IdentityState.Current?.UserId != null)
                {
                    <a class="nav-link text-dark" asp-controller="User" asp-action="Index">Profile</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Exit</a>
                }
                else
                {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </nav>
    </header>
    <div class="content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
