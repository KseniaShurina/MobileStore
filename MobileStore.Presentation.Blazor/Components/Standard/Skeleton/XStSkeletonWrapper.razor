<div class="xst-skeleton-wrapper">
    @if (IsLoading)
    {

        <XStSkeleton SkeletonType="@SkeletonType"
                            Width="@Width"
                            Height="@Height" />

    }
    else
    {
        @ChildContent
    }
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public bool IsLoading { get; set; }

    [Parameter] public SkeletonType SkeletonType { get; set; }
    [Parameter] public string? Width { set; get; }
    [Parameter] public string? Height { set; get; }
}
