@using MobileStore.Core.Models
@using System.Globalization
@using MobileStore.Presentation.Blazor.Components.Business.Cart
@using MobileStore.Presentation.Blazor.Components.Standard.Card
@using MobileStore.Presentation.Blazor.Components.Standard.Text
@using MobileStore.Presentation.Blazor.Helpers
@using MobileStore.Presentation.Blazor.Pages

<div class="product-card">
    <XStCard>
        <Content>
            @foreach (var productContent in Model.Contents.Take(1))
            {
                <div class="card-img"
                     style="background-image: url(@(ContentHelper.GetUrl(productContent.ContentId))">
                </div>
            }
            <div class="card-content">
                <XStText Typo="Typo.h5">@Model.Name</XStText>
                <XStText Typo="Typo.body1">@Model.Price.ToString(CultureInfo.InvariantCulture)</XStText>
                </div>
            </Content>
            <Actions>
                <XStCartItemCreateButton ProductId="Model.Id"></XStCartItemCreateButton>
            </Actions>
        </XStCard>
    </div>

    @code
    {
    [Parameter]
    public ProductModel Model { get; set; } = null!;
    }
