@model IEnumerable<MobileStore.Models.Phone>
@{
    ViewData["Title"] = "Магазин смартфонов";
}
<!DOCTYPE html>
 
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<h3>Смартфоны</h3>
<table>
    <tr>
        <td>Модель</td>
        <td>Производитель</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (var phone in Model)
    {
        <tr>
            <td>@phone.Name</td>
            <td>@phone.Company</td>
            <td>@phone.Price</td>
            <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
        </tr>
    }
</table>
</body>
</html>